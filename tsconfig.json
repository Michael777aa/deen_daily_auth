{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": false,                 // disable in production (smaller build)
    "declaration": false,               // not needed unless publishing npm package
    "types": ["node"],
    "baseUrl": "./src",                 // IMPORTANT: set base inside src
    "paths": {
      "@/*": ["*"]                      // resolves "@/modules/..." correctly
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
